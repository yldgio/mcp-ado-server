{
  "mcp.servers": {
    "azure-devops": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "d:\\projects\\training\\vibe\\mcp-ado",
        "mcp-ado-server"
      ],
      "env": {
        "AZURE_DEVOPS_ORGANIZATION": "CINECA-DataPlatform",
        "AZURE_DEVOPS_PAT": "your-personal-access-token-here",
        "LOG_LEVEL": "INFO",
        "LOG_FORMAT": "json",
        "HTTP_TIMEOUT": "30",
        "MAX_RETRIES": "3"
      },
      "initializationOptions": {
        "timeout": 30000,
        "retries": 3,
        "healthCheck": true
      }
    }
  },
  "mcp.logLevel": "info",
  "mcp.autoReconnect": true
}
