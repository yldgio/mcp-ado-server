{
    "name": "MCP Azure DevOps Server",
    "image": "mcr.microsoft.com/devcontainers/python:1-3.10-bullseye",

    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/astral-sh/uv/devcontainer-feature:latest": {}
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.mypy-type-checker",
                "ms-python.black-formatter",
                "ms-python.isort",
                "ms-python.flake8",
                "ms-toolsai.jupyter",
                "charliermarsh.ruff",
                "github.copilot",
                "github.copilot-chat"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.formatting.provider": "black",
                "python.linting.enabled": true,
                "python.linting.flake8Enabled": true,
                "python.linting.mypyEnabled": true,
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": "explicit"
                },
                "python.testing.pytestEnabled": true,
                "python.testing.unittestEnabled": false,
                "python.testing.pytestArgs": [
                    "tests"
                ]
            }
        }
    },

    "forwardPorts": [8000],

    "remoteEnv": {
        "AZURE_DEVOPS_PAT": "${localEnv:AZURE_DEVOPS_PAT}",
        "AZURE_DEVOPS_ORGANIZATION": "${localEnv:AZURE_DEVOPS_ORGANIZATION}"
    },

    "postCreateCommand": "uv pip install -e .[dev]",

    "remoteUser": "vscode",

    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
    ],

    "workspaceFolder": "/workspace"
}
